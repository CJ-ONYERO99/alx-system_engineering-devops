#!/usr/bin/env bash
# Set logging variables
LOG_FILE=/var/log/haproxy_setup.log
LOG_LEVEL=INFO

# Logging functions
log_error() {
  echo "$(date) [ERROR] $1" >> $LOG_FILE
}

log_info() {
  echo "$(date) [INFO] $1" >> $LOG_FILE
}

# Install HAProxy
apt-get update && apt-get install -y haproxy || {
  log_error "HAProxy installation failed"
  exit 1
}

# Backup the default configuration file
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak || {
  log_error "Failed to backup default configuration file"
  exit 1
}

# Configure HAProxy
cat <<EOF > /etc/haproxy/haproxy.cfg || {
  log_error "Failed to write HAProxy configuration file"
  exit 1
}
global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server 428422-web-01 18.235.255.90:80 check
    server 428422-web-02 34.224.16.161:80 check

EOF

# Verify HAProxy configuration
haproxy -c -f /etc/haproxy/haproxy.cfg || {
  log_error "HAProxy configuration verification failed"
  exit 1
}

# Restart HAProxy
service haproxy restart || {
  log_error "HAProxy restart failed"
  exit 1
}

# Enable HAProxy to be managed via init script
update-rc.d haproxy defaults || {
  log_error "Failed to enable HAProxy init script"
  exit 1
}

sudo service haproxy start
