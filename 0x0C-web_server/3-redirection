#!/usr/bin/env bash

# Install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Configure the Uncomplicated Firewall (UFW) to allow incoming traffic for the Nginx HTTP service
sudo ufw allow 'Nginx HTTP'

echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Configure Nginx redirection using sed
sudo sed -i '/^server {/a \ \ \ \ location \/redirect_me { \n \ \ \ \ \ \ return 301 https:\/\/github.com\/CJ-ONYERO99; \n \ \ \ \ }' /etc/nginx/sites-available/default

# Reload Nginx configuration
sudo service nginx reload
sudo service nginx restart

echo "Redirection configured"

# Verify redirection
sudo curl -sI http://34.224.16.161/redirect_me/ && echo
